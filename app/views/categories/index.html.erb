<table class="table table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @categories.each do |cat| %>
		<tr>
			<td><%= link_to cat.name, category_path(cat) %></td>
			<td>
				<%= link_to 'Show', category_path(cat), class: 'btn btn-xs btn-default' %>
				<%= link_to 'Edit', edit_category_path(cat), class: 'btn btn-xs btn-primary' %>
				<%= link_to 'Delete', category_path(cat), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
<%= link_to 'Add Category', new_category_path, class: 'btn btn-primary' %>